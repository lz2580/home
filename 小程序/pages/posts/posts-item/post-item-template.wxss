.post-container{
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  background-color: #fff;
  border-bottom: 1px solid #ededed;
  border-top: 1px solid #ededed;
  padding-bottom: 5px;
}
.post-author-date{
  margin: 10rpx 0 20rpx 10rpx
}
.post-author{
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle
}
.post-data{
  margin-left: 20rpx;
  vertical-align: middle;
  margin-bottom: 10px;
  font-size: 26rpx
}
.post-title{
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 10px;
  margin-left: 10px
}
.post-img{
  margin-left: 16rpx;
  width: 100%;
  height: 340rpx;
  margin: 0 auto;
  margin-bottom: 15rpx
}
.post-content{
  color: #666;
  font-size: 28rpx;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
  letter-spacing: 2rpx;
  line-height: 40rpx;
}
.post-like{
  font-size: 13px;
  flex-direction: row;
  line-height: 16px;
  margin-left: 10px;
}
.post-like-image{
  height: 16px;
  width:16px;
  margin-right:8px;
  vertical-align: middle;
}
.post-link-font{
  margin-right: 20px;
  vertical-align: middle;
}